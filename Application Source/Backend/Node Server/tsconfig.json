{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "build",
    "sourceMap": false,
    "removeComments": true,
    "declaration": true,
    "lib": [
      "es2017.object",
      "es2015",
      "es2017"
    ],
    "resolveJsonModule": true
  },
  "files": [
    "./node_modules/@types/node/index.d.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "external_modules",
    "**/*.spec.ts"
  ]
}